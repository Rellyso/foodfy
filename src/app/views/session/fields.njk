<div class="form__body">

    <div class="item">
        <div>Email</div>

        <input 
            type="email" 
            name="email" 
            value="{{ session.email }}" 
            required
            placeholder="Digite seu email"
        >

    </div>

    <div class="item">
        <div>Senha</div>

        <input 
            type="password" 
            name="password" 
            value="{{ session.password }}" 
            required
            placeholder="Digite sua senha"
        >

    </div>
    
</div>
