<div class="form__body">

    <div class="item">
        <div>Email</div>

        <input 
            type="email" 
            name="email" 
            value="{{ user.email }}" 
            required
            placeholder="Digite seu email"
            onblur="Validate.apply(this, 'isEmail')"
        >

    </div>

    <div class="item">
        <div>Nova senha</div>

        <input 
            type="password" 
            name="password" 
            required
            placeholder="Digite sua nova senha"
        >

    </div>

    <div class="item">
        <div>Repetir senha</div>

        <input 
            type="password" 
            name="passwordRepeat" 
            required
            placeholder="Repita a nova senha"
        >

    </div>

    <input type="hidden" name="token" value="{{ token }}">
    
</div>
