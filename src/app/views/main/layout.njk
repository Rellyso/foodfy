<!DOCTYPE html>
<html lang="pt-br">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {% block head %}
            <title>Foodfy</title>
        {% endblock head %}

        <link rel="shortcut icon" href="/assets/favicon.ico" type="image/x-icon">

        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        {% include 'parts/styles.njk'%}
    </head>

    <body>
        <div class="container" id="main">
            <header>
                <a class="logo__link" href="/">
                    <img src="/assets/logo.png" alt="foodfy logo">
                </a>

                <div class="links">
                    <a href="/about">Sobre</a>
                    <a href="/recipes">Receitas</a>
                    <a href="/chefs">Chefs</a>
                </div>

                {% block filter %}{% endblock filter %}

                {% if session.userId %}
                    <div class="dropdown-container">
                        <i class="material-icons account">
                            account_circle
                        </i>

                        <ul class="dropdown">
                            <li>
                                <a href="/admin/profile">Dashboard</a>
                            </li>
                            <li>
                                <form action="/logout" method="post">
                                    <button type="submit" class="logout">Sair</button>
                                </form>
                            </li>
                        </ul>
                    </div>

                {% endif %}
            </header>

            {% block content %}{% endblock content %}

            {% include 'parts/login-button.njk' %}

        </div>

        {% include 'parts/footer.njk' %}

        {# O LINK ESTÁ ABRINDO A PÁGINA DENTRO DA FUNÇÃO, VERIFICAR #}
        {% block scripts %}{% endblock scripts %}
        <script src="/scripts/main/main.js"></script>
        <script src="/scripts/fields.js"></script>
    </body>

</html>