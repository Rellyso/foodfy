{% extends "main/layout.njk" %}

    {% block head %}
        <title>resultados para "{{filter}}"</title>
    {% endblock head %}

    {% block filter %}
        <form action="/search" method="get" class="form-filter">
            <input type="text" name="filter" placeholder="Buscar uma receita" value="{{filter}}">

            <button type="submit">Buscar</button>
        </form>
    {% endblock filter %}
    
    
    {% block content %}

        <section id="page-search" class="content">
            <div class="cards">
                {% for recipe in recipes %}
                    <a href="/recipes/{{recipe.id}}" class="card">
                        <figure class="card__img">
                            <img src="{{recipe.src}}" alt="imagem de {{recipe.title}}">
                        </figure>

                        <div class="card__content">
                            <h3>{{recipe.title}}</h3>
                            
                            <p>{{recipe.chef_name}}</p>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </section>

