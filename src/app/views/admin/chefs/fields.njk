<div class="form__body">

    <div class="item">
        <div>Nome</div>

        <input type="text" name="name" value="{{ chef.name }}" required>

    </div>

    <div class="item">
        <div>Avatar</div>

        <div id="avatar-upload">
            <div class="upload-field">
                <input 
                    type="file" 
                    name="images" 
                    id="images"
                    accept="image/*"
                    onChange="avatarUpload.handleFileInput(event)"
                >
            
                <a class="button">Enviar Avatar</a>
            </div>

            <div class="avatar-preview">
                <img src="http://placehold.it/50x50" alt="avatar preview">
            </div>
        </div>

    </div>

    
</div>