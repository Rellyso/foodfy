{% extends "admin/layout.njk" %}

{% block head %}
    <title>{{chef.name}}</title>
{% endblock head %}

{% block content %}
    <section class="chef">
        <div class="chef__actions">
            <h2>Chef:
                {{chef.name}}</h2>

            <a class="button" href="/admin/chefs/{{ chef.id }}/edit">Editar Chef</a>
        </div>
        <div class="chef__head">

            <div class="chef__img">
                <img src="{{chef.avatar_url}}" alt="imagem do chef {{chef.name}}">
            </div>

            <div class="chef__title">
                <h1>{{chef.name}}</h1>

                <h3>4 receitas</h3>
            </div>
        </div>

        <div class="chef__content">
            <article class="recipe__ingredients">
                <div class="content__title">
                    <h2>Receitas</h2>
                </div>

                <div class="content__content active">
                    <div class="content__list">
                        <ul>
                            {% for ingredient in recipe.ingredients %}
                                <li>{{ingredient}}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </article>
        </div>
    </section>
{% endblock content %}

{% block scripts %}
    <script src="/scripts/main/chef.js"></script>
{% endblock scripts %}