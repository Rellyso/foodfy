{% extends 'admin/layout.njk' %}

{% block head %}
    <title>Usuários</title>
{% endblock head %}

{% block content %}
    <section class="content" id="users">
        <div class="content__title">
            <h2>Usuários</h2>

            <a href="/admin/users/create" class="button">Novo</a>
        </div>
        <div class="cards">
            {% for user in users %}
            <div class="card">
                <div class="card__content">
                    <h3>{{ user.name }}</h3>

                    <p>{{ user.email }}</p>
                    <div class="links">
                        <a href="/admin/users/edit">editar</a>
                        <a class="remove" href="/admin/users/remove">remover</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

    </div>
</section>
{% endblock content %}

{% block scripts %}
<script src="/scripts/fields.js"></script>
<script src="/scripts/main/main.js"></script>
{% endblock scripts %}