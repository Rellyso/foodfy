{% extends "layout.njk" %}

{% block head %}
    <title>{{recipe.title}}</title>
{% endblock head %}

{% block content %}
    <section class="recipe">
        <div class="recipe__head">
            <img src="{{recipe.image}}" alt="imagem da receita {{recipe.title}}">

            <div class="recipe__title">
                <h1>{{recipe.title}}</h1>

                <h3>{{recipe.author}}</h3>
            </div>
        </div>

        <div class="recipe__content">
            <article class="recipe__ingredients">
                <div class="content__title"><h2>Ingredientes</h2><span>esconder</span></div>

                <div class="content__content active">
                    <div class="content__list">
                    <ul>
                        {% for ingredient in recipe.ingredients %}
                        <li>{{ingredient}}</li>
                        {% endfor %}
                    </ul>
                </div>
                </div>
            </article>

            <article class="recipe__preparation">
                <div class="content__title"><h2>Modo de Preparo</h2><span>esconder</span></div>

                <div class="content__content active">
                    <div class="content__list">
                    <ul>
                        {% for step in recipe.preparation %}
                        <li>{{step}}</li>
                        {% endfor %}
                    </ul>
                </div>
                </div>
            </article>

            <article class="recipe__addtional">
                <div class="content__title"><h2>Informações Adicionais</h2><span>esconder</span></div>

                <div class="content__content active">
                    <p>{{recipe.information}}</p>
                </div>
            </article>
        </div>
    </section>
{% endblock content %}

{% block scripts %}
    <script src="/scripts/recipe.js"></script>
{% endblock scripts %}